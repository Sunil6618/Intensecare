@model IntenseCare.Models.tblDoctor

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>

    <div class="card shadow md-4">
        <div class="card-header py-3">
            <h6 class="m-0 fornt fa-weight-bold text-dark">
                <a href="@Url.Action("Index","Doctor")" class="btn btn-dark">
                    <i class="fa fa-backward fa-1x"></i>
                </a>
            </h6>

        </div>
        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col-md-4" style="text-align:center">
                        @if (Model.ProfileImageUrl == null)
                        {
                            <img src="~/Areas/image/user2.png" class="img-thumbnail" id="DoctorImage" />
                        }
                        else
                        {
                            <img src="~/Areas/image/@Html.DisplayFor(model=>model.ProfileImageUrl)" class="img-thumbnail" id="DoctorImage" name="DoctorImage"/>
                        }
                        <br />
                        <p>
                            Member since @Model.ApprovedOn.Value.Year<br />
                           
                        </p>
                        <br />
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <h3 class="text-dark"> @Html.DisplayFor(model => model.FirstName)'s profile</h3>
                        </div>
                        <div class="row">
                            <i class="fa fa-1x fa-mail-bulk"></i>
                        </div>
                        <div class="col-sm-6">
                            <a href="mailto: @Html.DisplayFor(model => model.Email)">
                                <h6> @Html.DisplayFor(model => model.Email)</h6>
                            </a>
                        </div>
                        <div class="row">
                            <i class="fa fa-1x fa-phone"></i>
                        </div>
                        <div class="col-sm-6">
                            <a href="tel: @Html.DisplayFor(model => model.ContactNo)">
                                <h6> @Html.DisplayFor(model => model.ContactNo)</h6>
                            </a>
                        </div>

                        Doctor Id :<b>@Model.DoctorId</b><br />
                        Address : <b>@Model.Address</b><br />
                        Gender :  <b>@Model.Gender</b><br />
                        DOb : <b>@Model.DOB</b><br />
                        City : <b>@Model.CityID</b><br />
                        Degree :<b>@Model.Degree</b><br />
                        Specialization :<b>@Model.Specialization</b><br />
                        Year Of Experience : <b>@Model.YearOfExperience</b><br />
                        Created By :<b>@Model.ApprovedBy</b><br />
                        IsActive :<b>@Model.IsActive</b><br />
                        IsMobileVerified : <b>@Model.IsMobileVerified</b><br />
                        IsVerified :<b>@Model.IsVerified</b>
                        <div class="row">
                            <br />  <br />
                            <div class="alert-danger" style="margin-top:40px; margin-left:10px">
                                @{
                                    if (Model.IsActive == true)
                                    {
                                        <a href="@Url.Action("Activate","Doctor")" class="btn btn-danger">Deativate Account</a>
                                    }
                                }
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>