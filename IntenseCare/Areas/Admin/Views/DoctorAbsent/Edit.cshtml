@model IntenseCare.Models.tblDoctorAbsence
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    @section scripts{
        <script src="~/DataTables/jQuery-3.3.1/jquery-3.3.1.js"></script>
    }
 
</head>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">Update Doctor Absent Record</h6>
    </div>
    <div class="card-body">
        <form class="user" method="post" name="frmCreate">
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <label>DoctorId</label>
                    <input type="text" class="form-control" id="DoctorId" name="DoctorId" value="@Model.DoctorId" required>

                </div>
                <div class="col-sm-6 ">
                    <label>ToDate</label>
                    <input type="date" class="form-control" id="ToDate" name="ToDate" value="@Model.ToDate" required>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>FromDate</label>
                    <input type="date" class="form-control" id="FromDate" name="FromDate" value="@Model.FromDate"required>
                </div>
                <div class="col-sm-6">
                    <label>FromTime</label>
                    <input type="time" class="form-control" id="FromTime" name="FromTime" value="@Model.FromTime" required>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" name="btnsubmit" value="Update" class="btn btn-success" onclick="return Validate()" />
                <a class="d-block small mt-3" href="@Url.Action("Index","DoctorAbsent")">Back To List</a>
            </div>
        </form>
    </div>
</div>

