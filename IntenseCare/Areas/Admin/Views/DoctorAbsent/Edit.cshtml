@model IntenseCare.Models.tblDoctorAbsence 
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Update Doctor Absents Record</div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-lg-12">
                            <div class="form-label-group">
                                <input type="text" id="DoctorId" name="DoctorId" class="form-control" value="@Model.DoctorId" required="required" autofocus="autofocus">
                                @*<label for="Name">Enter name</label>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-lg-12">
                            <div class="form-label-group">
                                <input type="text" id="FromDate" name="FromDate" class="form-control" value="@Model.FromDate" required="required" autofocus="autofocus">
                                @*<label for="Name">Enter name</label>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-lg-12">
                            <div class="form-label-group">
                                <input type="text" id="ToDate" name="ToDate" class="form-control" value="@Model.ToDate" required="required" autofocus="autofocus">
                                @*<label for="Name">Enter name</label>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-lg-12">
                            <div class="form-label-group">
                                <input type="text" id="FromTime" name="FromTime" class="form-control" value="@Model.FromTime" required="required" autofocus="autofocus">
                                @*<label for="Name">Enter name</label>*@
                            </div>
                        </div>
                        
                    </div>
                </div>

                <input type="submit" name="btnsubmit" value="Update" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>


