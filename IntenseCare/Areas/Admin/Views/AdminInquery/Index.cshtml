@model IEnumerable<IntenseCare.Models.tblAdminIquiry>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section scripts{

    <link href="~/DataTables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/jQuery-3.3.1/jquery-3.3.1.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $("#example").DataTable();
        });
    </script>

}
<p>
    @Html.ActionLink("Add", "add", new { })
</p>
<h2>List of Admin Inquery </h2>
<div class="col-md-12">


    <table class=" table table-hover" id="example">
        <thead class="thead-dark">
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email Id</th>
                <th>Subject</th>
                <th>Inquery</th>
                <th>IsReply</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td><a href="@Url.Action("Details","AdminInquery",new { id = item.AdminInquiryID})">@item.FirtsName</a></td>
                <td>@item.LastName</td>
                <td>@item.EmailID</td>
                <td>@item.Subject</td>
                <td>@item.Inquiry</td>
                <td id="ActiveContent">
                    @if (item.IsReply == true)
                    {
                        <div class="custom-control custom-switch">
                            <input type="checkbox" checked class="custom-control-input" id="Active_@item.AdminInquiryID" onchange="return activate(@item.AdminInquiryID)">
                            <label class="custom-control-label" for="Active_@item.AdminInquiryID"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="Active_@item.AdminInquiryID" onchange="return activate(@item.AdminInquiryID)">
                            <label class="custom-control-label" for="Active_@item.AdminInquiryID"></label>
                        </div>
                    }
                </td>


            </tr>
            }
        </tbody>
    </table>
</div>


