@model IEnumerable<IntenseCare.Models.tblCMSPage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <link href="~/DataTables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/jQuery-3.3.1/jquery-3.3.1.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $("#example").DataTable();
        });
    </script>
}
<p>
    @Html.ActionLink("Add New CMS", "Add", new { })
</p>
<h2>List of Doctor Details</h2>
<div class="col-md-12">
    <table class=" table table-hover" id="example">
        <thead class="thead-dark">
            <tr>

                <th>CMSId</th>
                <th>PageTitle</th>
                <th>Description</th>
                <th>CreatedOn</th>
                <th>CreatedBy</th>
                <th>IsActive</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                @*<td><a href="@Url.Action("Detail","Doctor",new { id = item.DoctorId })">@item.FirstName @item.LastName</a></td>*@
                <td>@item.CMSPageId</td>
                <td>@item.PageTittle</td>
                <td>@item.Description</td>
                <td>@item.CreatedOn</td>
                <td>@item.CreatedBy</td>
                <td id="ActiveContent">
                    @if (item.IsActive == true)
                    {
                        <div class="custom-control custom-switch">
                            <input type="checkbox" checked class="custom-control-input" id="Active_@item.CMSPageId" onchange="return activate(@item.CMSPageId)">
                            <label class="custom-control-label" for="Active_@item.CMSPageId"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="Active_@item.CMSPageId" onchange="return activate(@item.CMSPageId)">
                            <label class="custom-control-label" for="Active_@item.CMSPageId"></label>
                        </div>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { Id= item.CMSPageId})" class=" btn btn-sm btn-circle btn btn-primary">
                        <i class="fa fa-edit"></i>
                    </a>
                    @*<a href="@Url.Action("Delete",new { Id= item.CMSPageId})" class="btn btn-sm btn-circle btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>*@
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
@* <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>*@
<script>
            function activate(id) {
                $.ajax(
                    {
                        type: "POST",
                        url: "@Url.Action("Active", "cms")" + "/" + id,
                        success: function (response) {
                            if (response == true) {
                                alert('Account Activated');
                            }
                            else {
                                alert('Account Deactivated');
                            }
                        },
                        failure: function (response) {
                            alert('Fail -' + response.responseText);
                        },
                        error: function (response) {
                            alert('Error -' + response.responseText);
                        }
                    }
                    );
                }
</script>



