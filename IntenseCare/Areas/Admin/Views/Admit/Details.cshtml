@model IntenseCare.Models.tblAdmitDetail
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>

    <div class="card shadow md-4">
        <div class="card-header py-3">
            <h6 class="m-0 fornt fa-weight-bold text-dark">
                <a href="@Url.Action("Index","Admit")" class="btn btn-dark">
                    <i class="fa fa-backward fa-1x"></i>
                </a>
            </h6>

        </div>
        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col-md-4" style="text-align:center">
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <h3 class="text-dark"> @ViewBag.PatientName's profile</h3>
                        </div>
                        Admin Id :<b>@Model.AdmitDetailId</b><br />
                        Doctor Id :<b>@ViewBag.DoctorName</b><br />
                        @*Patient Id :<b>@Model.PatientId</b><br />*@
                        Nurse Id: <b>@ViewBag.NurseName</b><br />
                        WardType :<b>@Model.WardType</b><br />
                        Ward No : <b>@Model.WardNo</b><br />
                        CreatedBy :<b>@Model.CreatedBy</b><br />
                        @*CreatedBy :<b>@ViewBag.AdminName</b><br />*@
                        Modified By:<b>@Model.ModifiedBy</b><br />
                        Modified On : <b>@Model.ModifiedOn</b><br />
                        Created On : <b>@Model.CreatedOn</b><br />

                        <div class="row">
                            <h5 class="fa fa-1x">
                                IsDischarge &nbsp; &nbsp; :@if (Model.IsDischarge == true)
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" checked class="custom-control-input" id="Insert_@Model.AdmitDetailId" onchange="return activate(@Model.AdmitDetailId)">
                                        <label class="custom-control-label" for="Insert_@Model.AdmitDetailId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" class="custom-control-input" id="Insert_@Model.AdmitDetailId" onchange="return activate(@Model.AdmitDetailId)">
                                        <label class="custom-control-label" for="Insert_@Model.AdmitDetailId"></label>
                                    </div>
                                }
                            </h5>
                        </div>
                        IsDischarge :<b>@Model.IsDischarge</b>

                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 


