
@{
    ViewBag.Title = "registration";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    @section scripts{
        <script src="~/DataTables/jQuery-3.3.1/jquery-3.3.1.js"></script>
    }
             <meta name="viewport" content="width=device-width" />
            <title>registration</title>
            <link href="~/AdminContent/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
            <!-- Custom styles for this template-->
            <link href="~/AdminContent/css/sb-admin.css" rel="stylesheet">

        </head>

        <body class="bg-dark">
            <div class="container">
                <div class="card card-register mx-auto mt-5">
                    <div class="card-header">Add Admit details</div>
                    <div class="card-body">
                        <form method="post" name="frmCreate">
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            <input type="text" id="DoctorId" name="DoctorId" class="form-control" placeholder="Enter name" required="required" autofocus="autofocus">
                                            <label for="DoctorId">Doctor Id</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            <input type="text" id="PatientId" name="PatientId" class="form-control" placeholder="Enter Password" required="required">
                                            <label for="PatientId">Patient Id</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="text" id="NurseId" name="NurseId" class="form-control" placeholder="Nurse Id" required="required">
                                    <label for="NurseId">Nurse Id</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            <input type="text" id="WardType" name="WardType" class="form-control" placeholder="Ward Type" required="required">
                                            <label for="WardType">Ward Type</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            <input type="text" id="WardNo" name="WardNo" class="form-control" placeholder="Ward No" required="required">
                                            <label for="WardNo">Ward No</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <a class="d-block small mt-3" href="@Url.Action("Index","Admit")">Back to list</a>
                                <input type="Submit" value="Submit" class="btn btn-primary btn-block" onclick="return Validate()" />
                            </div>

                        </form>
                       
                    </div>
                </div>
            </div>
            <!-- Bootstrap core JavaScript-->
            <script src="~/AdminContent/vendor/jquery/jquery.min.js"></script>
            <script src="~/AdminContent/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <!-- Core plugin JavaScript-->
            <script src="~/AdminContent/vendor/jquery-easing/jquery.easing.min.js"></script>

        </body>
    </html>




