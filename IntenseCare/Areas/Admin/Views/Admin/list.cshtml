
@model IEnumerable<IntenseCare.Models.tblAdmin>
@{
    ViewBag.Title = "list";
}

@section scripts{
    <link href="~/DataTables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/jQuery-3.3.1/jquery-3.3.1.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $("#example").DataTable();
        });
    </script>
}
<p>
    @Html.ActionLink("Add New Admin", "registration", new { })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">List of Admin Details</h6>
    </div>
    <div class="card-body">
        <div class="col-lg-12">
            <table class=" table table-hover table-bordered" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>ContactNo</th>
                        <th>IsActive</th>
                        <th>CreatedOn</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action("Detail","Admin",new { id = item.AdminId })">@item.Name </a></td>
                            <td>@item.Emailid </td>
                            <td>@item.ContactNo</td>
                            <td id="ActiveContent">
                                @if (item.IsActive == true)
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="Active_@item.AdminId" onchange="return activate(@item.AdminId)">
                                        <label class="custom-control-label" for="Active_@item.AdminId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="Active_@item.AdminId" onchange="return activate(@item.AdminId)">
                                        <label class="custom-control-label" for="Active_@item.AdminId"></label>
                                    </div>
                                }
                            </td>
                            <td>@item.CreatedOn.Value.ToShortDateString()</td>
                            <td>
                                <a href="@Url.Action("Edit",new { Id= item.AdminId})" class=" btn btn-sm btn-circle btn btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete",new { Id= item.AdminId})" class="btn btn-sm btn-circle btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    @* <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>*@

    <script>
            function activate(id) {
                    $.ajax(
                        {
                            type: "POST",
                            url: "@Url.Action("Active", "Admin")" + "/" + id,
                            success: function (response) {
                                if (response == true) {
                                    alert('Account Activated');
                                }
                                else {
                                    alert('Account Deactivated');
                                }
                            },
                            failure: function (response) {
                                    alert('Fail -' + response.responseText);
                                },
                            error: function (response) {
                                    alert('Error -' + response.responseText);
                                }
                            }
                    );
                }
    </script>
