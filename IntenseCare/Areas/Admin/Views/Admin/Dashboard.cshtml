                            <i class="fas fa-fw fa-comments"></i>
                        </div>
                        <div class="mr-5">Active Doctor</div>
                        <div class="mr-5">@ViewBag.DoctorCount</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index","Doctor")">
                        <span class="float-left">View Details</span>
                        <span class="float-right">
                            <i class="fas fa-angle-right"></i>
                        </span>
                    </a>
                </div>
            </div>
