                <div class="card text-white bg-warning o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                            <i class="fas fa-fw fa-list"></i>
                        </div>
                        <div class="mr-5">Patients</div>
                        <div class="mr-5">@ViewBag.PatientCount</div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Index","Patient")">
