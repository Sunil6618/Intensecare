@model IntenseCare.Models.tblAdmin

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>

    <div class="card shadow md-4">
        <div class="card-header py-3">
            <h6 class="m-0 fornt fa-weight-bold text-dark">
                <a href="@Url.Action("Index","Admin")" class="btn btn-dark">
                    <i class="fa fa-backward fa-1x"></i>
                </a>
            </h6>

        </div>
        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col-md-4" style="text-align:center">
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <h3 class="text-dark"> @Html.DisplayFor(model => model.Name)'s profile</h3>
                        </div>
                        <div class="row">
                            <i class="fa fa-1x fa-mail-bulk"></i>
                        </div>
                        <div class="col-sm-6">
                            <a href="mailto: @Html.DisplayFor(model => model.Emailid)">
                                <h6> @Html.DisplayFor(model => model.Emailid)</h6>
                            </a>
                        </div>
                        <div class="row">
                            <i class="fa fa-1x fa-phone"></i>
                        </div>
                        <div class="col-sm-6">
                            <a href="tel: @Html.DisplayFor(model => model.ContactNo)">
                                <h6> @Html.DisplayFor(model => model.ContactNo)</h6>
                            </a>
                        </div>
                        Admin Id :<b>@Model.AdminId</b><br />
                        Created By :<b>@Model.CreatedBy</b><br />
                        <div class="row">
                            <h5 class="fa fa-1x">
                                IsInsert &nbsp; &nbsp; :@if (Model.IsInsert == true)
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" checked class="custom-control-input" id="Insert_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Insert_@Model.AdminId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" class="custom-control-input" id="Insert_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Insert_@Model.AdminId"></label>
                                    </div>
                                }
                            </h5>
                        </div>

                        <div class="row">
                            <h5 class="fa fa-1x">
                                IsEdit &nbsp; &nbsp; :@if (Model.IsEdit == true)
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" checked class="custom-control-input" id="Edit_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Edit_@Model.AdminId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" class="custom-control-input" id="Edit_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Edit_@Model.AdminId"></label>
                                    </div>
                                }
                            </h5>
                        </div>
                        <div class="row">
                            <h5 class="fa fa-1x">
                                IsDelete &nbsp; &nbsp; :@if (Model.IsDelete == true)
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" checked class="custom-control-input" id="Delete_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Delete_@Model.AdminId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch" style=" float : right; margin-left:10px">
                                        <input type="checkbox" class="custom-control-input" id="Delete_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Delete_@Model.AdminId"></label>
                                    </div>
                                }
                            </h5>
                        </div>
                        <div class="row">
                            <h5 class="fa fa-1x">
                                IsSuper &nbsp; &nbsp; :@if (Model.IsSuper == true)
                                {
                                    <div class="custom-control custom-switch"  style=" float : right; margin-left:10px">
                                        <input type="checkbox" checked class="custom-control-input" id="Super_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Super_@Model.AdminId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch"  style=" float : right; margin-left:10px">
                                        <input type="checkbox" class="custom-control-input" id="Super_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                                        <label class="custom-control-label" for="Super_@Model.AdminId"></label>
                                    </div>
                                }
                            </h5>
                        </div>
                        <div class="row">
                            <br />  <br />
                            <div class="alert-danger" style="margin-top:40px; margin-left:10px">
                                @{
                                    if (Model.IsActive == true)
                                    {
                                        <a href="@Url.Action("Activate","Doctor")" class="btn btn-danger">Deativate Account</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
